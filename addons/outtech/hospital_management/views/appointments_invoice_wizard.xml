<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="appointments_invoice_wizard_view" model="ir.ui.view">
            <field name="name">Create Invoice</field>
            <field name="model">medical.appointments.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Invoice">
                    <h2>
                         Do you want to create the invoice(s) ?
                    </h2>
                    <button name="create_invoice" string="Create Invoice" type="object" class="oe_highlight"/>
                    
                    	or 
                    <button name="cancel" string="cancel" type="object" special="cancel" class="oe_highlight"/>
                </form>
            </field>
        </record>

        <record id="action_appointments_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Create Invoice</field>
            <field name="res_model">medical.appointments.invoice.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>




    </data>
</openerp>
