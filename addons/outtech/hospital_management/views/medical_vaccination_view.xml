<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="medical_patient_vaccination_tree" model="ir.ui.view">
            <field name="name">medical.vaccination.tree</field>
            <field name="model">medical.vaccination</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="vaccine"/>
                    <field name="dose"/>
                    <field name="institution"/>
                    <field name="date"/>
                    <field name="next_dose_date"/>
                    <field name="vaccine_expiration_date"/>
                    <field name="vaccine_lot"/>
                    <field name="observations"/>
                </tree>
            </field>
        </record>

		<record id="medical_patient_vaccination_form" model="ir.ui.view">
            <field name="name">medical.vaccination.form</field>
            <field name="model">medical.vaccination</field>
            <field name="arch" type="xml">
                <form string="Immunizations">
                        <group colspan="4" col="4">
                                <field name="vaccine"/>
                                <field name="dose"/>
                                <field name="institution"/>
                                <field name="date"/>
                                <field name="next_dose_date"/>
                                <field name="vaccine_expiration_date"/>
                                <field name="vaccine_lot"/>
                                <field name="observations"/>
                          </group>
                </form>
            </field>
        </record>
        
        </data>
</openerp>
