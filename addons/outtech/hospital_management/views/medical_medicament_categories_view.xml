            <field name="model">medicament.category</field>
            <field name="arch" type="xml">
                <tree string="Medicament Categories">
                                <field name="name"/>
                        </tree>
            </field>
        </record>
        
        <record id="action_medical_medicament_category_tree" model="ir.actions.act_window">
