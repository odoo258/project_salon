<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="medical_newborn_view_form" model="ir.ui.view">
            <field name="name">medical.newborn.view.form</field>
            <field name="model">medical.newborn</field>
            <field name="arch" type="xml">
                <form string="Newborn Info" version="9.0">
                    <header>
                        <button name="print_card" string="Print Newborn Card" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <field name="photo" nolabel="1" class="oe_left oe_avatar" img_width="120" img_height="120"
                               width="120" height="120" widget="image"/>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <!--<h1>-->
                            <field name="name" default_focus="1" placeholder="Newborn ID"/>
                            <!--</h1>-->
                        </div>
                        <group string="Main">
                            <group>
                                <field name="baby_name"/>
                                <field name="sex"/>
                                <field name="dismissed"/>
                                <field name="weight"/>
                                <field name="responsible_id"/>
                                <field name="mother_id"/>
                                <field name="birth_date"/>
                                <field name="length"/>
                                <field name="cephalic_perimeter"/>
                            </group>
                            <newline/>
                            <group string="APGAR Scores" colspan="10">
                                <field name="apgar_score_ids" nolabel="1"/>
                            </group>
                            <newline/>
                            <group string="Reanimation">
                                <field name="reanimation_stimulation"/>
                                <field name="reanimation_aspiration"/>
                                <field name="reanimation_intubation"/>
                                <field name="reanimation_mask"/>
                                <field name="reanimation_oxygen"/>
                            </group>
                        </group>
                        <newline/>
                        <notebook>
                            <page string="Findings and Tests">
                                <group string="Neonatal Signs and Symptoms">
                                    <group>
                                        <field name="meconium"/>
                                        <field name="neonatal_ortolani"/>
                                        <field name="neonatal_barlow"/>
                                        <field name="neonatal_hernia"/>
                                        <field name="neonatal_ambiguous_genitalia"/>
                                        <field name="neonatal_erbs_palsy"/>
                                    </group>
                                    <group>
                                        <field name="neonatal_hematoma"/>
                                        <field name="neonatal_talipes_equinovarus"/>
                                        <field name="neonatal_palmar_crease"/>
                                        <field name="neonatal_polydactyly"/>
                                        <field name="neonatal_syndactyly"/>
                                    </group>
                                </group>
                                <group string="Neonatal Reflex Check">
                                    <group>
                                        <field name="neonatal_moro_reflex"/>
                                        <field name="neonatal_grasp_reflex"/>
                                        <field name="neonatal_stepping_reflex"/>
                                        <field name="neonatal_babinski_reflex"/>
                                    </group>
                                    <group>
                                        <field name="neonatal_blink_reflex"/>
                                        <field name="neonatal_sucking_reflex"/>
                                        <field name="neonatal_swimming_reflex"/>
                                        <field name="neonatal_tonic_neck_reflex"/>
                                    </group>
                                </group>
                                <group string="Congenital diseases">
                                    <field name="congenital_disease_ids" nolabel="1"/>
                                </group>
                                <group string="Medication">
                                    <field name="inpatient_medication_ids" nolabel="1"/>
                                </group>
                                <group string="Tests">
                                    <group>
                                        <field name="test_vdrl"/>
                                        <field name="test_toxo"/>
                                        <field name="test_chagas"/>
                                    </group>
                                    <group>
                                        <field name="test_billirubin"/>
                                        <field name="test_audition"/>
                                        <field name="test_metabolic"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other">
                                <group string="Deceased">
                                    <group>
                                        <group>
                                            <field name="bd"/>
                                            <field name="died_at_delivery"/>
                                            <field name="died_at_the_hospital"/>
                                        </group>
                                        <group>
                                            <field name="died_being_transferred"/>
                                            <field name="tod"/>
                                            <field name="cod"/>
                                        </group>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="notes" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="medical_newborn_view_tree" model="ir.ui.view">
            <field name="name">medical.newborn.view.tree</field>
            <field name="model">medical.newborn</field>
            <field name="arch" type="xml">
                <tree string="Newborn Info">
                    <field name="name"/>
                    <field name="baby_name"/>
                    <field name="mother_id"/>
                    <field name="birth_date"/>
                    <field name="sex"/>
                    <field name="length"/>
                    <field name="weight"/>
                </tree>
            </field>
        </record>

        <record id="medical_newborn_view_search" model="ir.ui.view">
            <field name="name">medical.newborn.view.search</field>
            <field name="model">medical.newborn</field>
            <field name="arch" type="xml">
                <search string="Search Newborn">
                    <group expand="1" string="Group By...">
                        <filter string="Date" icon="terp-go-month" domain="[]" context="{'group_by':'birth_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="medical_neomatal_apgar_tree" model="ir.ui.view">
            <field name="name">medical.newborn.view.tree</field>
            <field name="model">medical.neomatal.apgar</field>
            <field name="arch" type="xml">
                <tree string="Medical Neomatal Apgar">
                    <field name="apgar_minute"/>
                    <field name="apgar_respiration"/>
                    <field name="apgar_activity"/>
                    <field name="apgar_appearance"/>
                    <field name="apgar_pulse"/>
                    <field name="apgar_scores"/>
                    <field name="apgar_grimace"/>
                </tree>
            </field>
        </record>


        <record id="action_medical_newborn" model="ir.actions.act_window">
            <field name="name">Newborn</field>
            <field name="res_model">medical.newborn</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--menuitem name="Newborn"
                  id="new_born_menuitem"
                  action="action_medical_newborn"
                  parent="hospital_management.main_menu_pediatrics"
                  sequence="1"/-->
    </data>
</openerp>

