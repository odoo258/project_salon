<openerp>
    <data>		
		<record id="medical_drug_route" model="ir.ui.view">
            <field name="name">medical.drug.route.form</field>
            <field name="model">medical.drug.route</field>
            <field name="arch" type="xml">
                <form string="Medicament Administration Routes">
                            <group colspan="4" col="4">
								<field name="name"/>
								<field name="code"/>
								</group>
                            </form>
            </field>
        </record>
        
        <record id="medical_drug_route_tree" model="ir.ui.view">
            <field name="name">medical.drug.route.tree</field>
            <field name="model">medical.drug.route</field>
            <field name="arch" type="xml">
                <tree string="Medicament Administration Routes">
                                        <field name="name"/>
                                        <field name="code"/>
                                </tree>
            </field>
        </record>
        
        <record id="view_medical_drug_route_action" model="ir.actions.act_window">
            <field name="name">Medicament Administration Routes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.drug.route</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
