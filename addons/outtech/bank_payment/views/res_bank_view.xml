<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <record id="view_res_bank_form_ext" model="ir.ui.view">
        <field name="name">res.bank.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <group>
                    <separator string="Code Occurrence" colspan="4"/>
                    <field name="code_occurrence_ids" nolabel="1" colspan="4">
                        <tree string="Items Template" editable="top">
                            <field name="code_occurrence"/>
                            <field name="action"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>
</openerp>
