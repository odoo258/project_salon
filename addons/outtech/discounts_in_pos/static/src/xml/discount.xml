<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_extend_template" inherit_id="point_of_sale.template">

<t t-extend="NumpadWidget">

<t t-jquery="div.numpad" t-operation="inner">

            <button class="input-button number-char">1</button>
            <button class="input-button number-char">2</button>
            <button class="input-button number-char">3</button>
            <button class="mode-button" data-mode='quantity'>Qty</button>
            <br />
            <button class="input-button number-char">4</button>
            <button class="input-button number-char">5</button>
            <button class="input-button number-char">6</button>
            <button class="mode-button" data-mode='discount'>Desc%</button>
            <br />
            <button class="input-button number-char">7</button>
            <button class="input-button number-char">8</button>
            <button class="input-button number-char">9</button>
            <button class="mode-button" data-mode='discount_fixed'>DescR$</button>
            <!--<button class="mode-button" data-mode='price'>Price</button>-->
            <br />
            <button class="input-button numpad-minus" >+/-</button>
            <button class="input-button number-char">0</button>
            <button class="input-button number-char">.</button>
            <button class="input-button numpad-backspace">
                <img style="pointer-events: none;" src="/point_of_sale/static/src/img/backspace.png" width="24" height="21" />
            </button>
            <br />
            <!--<button class="mode-button" data-mode='discount_fixed' style="width:100%;height:45px;">Disc.Fixed</button>-->
            <button class="mode-button" data-mode='discount_percent' style="width:50%;height:55px;">Desc-Total(%)</button>
            <br />
            <button class="mode-button" data-mode='discount_total' style="width:50%;height:55px;">Desc-Total(R$)</button>
</t>

</t>

<t t-name="Orderline">
        <li t-attf-class="orderline #{ line.selected ? 'selected' : '' }">
            <span class="product-name">
                <t t-esc="line.get_product().display_name"/>
            </span>
            <span class="price">
                <t t-esc="widget.format_currency(line.get_display_price())"/>
            </span>
            <ul class="info-list">
                <t t-if="line.get_quantity_str() !== '1' || line.selected ">
                    <li class="info">
                        <em>
                            <t t-esc="line.get_quantity_str()" />
                        </em>
                        <t t-esc="line.get_unit().name" />
                        at
                        <t t-esc="widget.format_currency(line.get_unit_display_price(),'Product Price')" />
                        /
                        <t t-esc="line.get_unit().name" />
                    </li>
                </t>
                <t t-if="line.get_discount()">
                    <li class="info">
                        With a
                        <em>
                            <t t-esc="line.get_discount()" />%
                        </em>
                        discount
                    </li>
                </t>
                <t t-if="line.get_discount_fixed()">
                    <li class="info">
                        With a
                        <em>
                            <t t-esc="widget.format_currency(line.get_discount_fixed())"/>
                        </em>
                        discount
                    </li>
                </t>
            </ul>
        </li>
    </t>

    <t t-name="OrderWidget">
        <div class="order-container">
            <div class="order-scroller touch-scrollable">
                <div class="order">
                    <t t-if="orderlines.length === 0" >
                        <div class='order-empty'>
                            <i class='fa fa-shopping-cart' />
                            <h1>Your shopping cart is empty</h1>
                        </div>
                    </t>
                    <t t-if="orderlines.length > 0">
                        <ul class="orderlines"></ul>
                        <div class="summary clearfix">
                            <div class="line">
                                <div class='entry total'>
                                    <span class="label">Total: </span> <span class="value">0.00 €</span>
                                    <div class='subentry'>Taxes: <span class="value">0.00€</span></div>

                                    <div class='subentry'><span class="value_discount_total"></span></div>
                                    <div class='subentry'><span class="value_discount_percent"></span></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>

    <t t-name="PosTicket">
        <div class="pos-sale-ticket">

            <div class="pos-center-align"><t t-esc="moment().format('L LT')"/> <t t-esc="order.name"/></div>
            <br />
            <t t-esc="widget.pos.company.name"/><br />
            CNPJ: <t t-esc="widget.pos.company.cnpj_cpf"/><br />
            <t t-esc="widget.pos.company.street or ''"/>, <t t-esc="widget.pos.company.number or ''"/> <t t-esc="widget.pos.company.street2 or ''"/><br />
            CEP: <t t-esc="widget.pos.company.zip or ''"/><br />
            Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
            Vendedor: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br />
            Local: <t t-esc="widget.pos.shop.name"/><br />
            <br />
            <br />
            <t t-if="receipt.client">
                Cliente: <t t-esc="receipt.client"/><br />
            </t>
            <t t-if="receipt.pos_ext.cpf_nfse">
                <t t-if="receipt.pos_ext.cpf_nfse.length == 14">
                    CPF: <t t-esc="receipt.pos_ext.cpf_nfse"/><br />
                </t>
                <t t-if="receipt.pos_ext.cpf_nfse.length == 18">
                    CNPJ: <t t-esc="receipt.pos_ext.cpf_nfse"/><br />
                </t>
                <br />
                <br />
            </t>
            <t t-if="receipt.header">
                <div style='text-align:center'>
                    <t t-esc="receipt.header" />
                </div>
                <br />
            </t>
            <table class='receipt-orderlines'>
                <colgroup>
                    <col width='50%' />
                    <col width='25%' />
                    <col width='25%' />
                </colgroup>
                <tr>
                    <td><b>Produto:</b></td>
                    <td class="pos-right-align"><b>Qtd:</b></td>
                    <td class="pos-right-align"><b>Preço:</b></td>
                </tr>
                <tr t-foreach="orderlines" t-as="orderline">
                    <td>
                        <t t-esc="orderline.get_product().display_name"/><br/>
                        <div>
                            Valor UN <t t-esc="widget.format_currency(orderline.price)"/>
                        </div>
                         <t t-if="orderline.get_discount() > 0">
                             <div class="pos-disc-font">
                                Com <t t-esc="orderline.get_discount()"/>% desconto
                             </div>
                        </t>
                        <t t-if="orderline.get_discount_fixed() > 0">
                            <div class="pos-disc-font">
                                Com <t t-esc="widget.format_currency(orderline.get_discount_fixed())"/> desconto
                            </div>
                        </t>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="orderline.get_quantity_str_with_unit()"/>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(((orderline.price * orderline.quantity) - (((orderline.price * orderline.quantity) * orderline.discount) / 100)) - orderline.discount_fixed)"/>
                    </td>
                </tr>
            </table>
            <br />
            <table class='receipt-total'>
                <tr>
                    <td>Subtotal:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_subtotal_ext())"/>
                    </td>
                </tr>
                <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                    <tr>
                        <td><t t-esc="taxdetail.name" /></td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(taxdetail.amount)" />
                        </td>
                    </tr>
                </t>
                <tr>
                    <td>Desconto Valor:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_discount_total_order())"/>
                    </td>
                </tr>
                <tr>
                    <td>Desconto Percentual:</td>
                    <td class="pos-right-align">
                        <t t-esc="order.get_discount_percent_order()"/> %
                    </td>
                </tr>

                <tr class="emph">
                    <td>Total:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                    </td>
                </tr>
            </table>
            <br />
            <table class='receipt-paymentlines'>
                <t t-foreach="paymentlines" t-as="line">
                  <tr>
                      <td>
                          <t t-esc="line.name"/>
                          <t t-if="line.number_installment > 1">
                            <t t-esc="line.number_installment"/> Parcelas
                          </t>
                      </td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(line.get_amount())"/>
                      </td>
                  </tr>
                </t>
            </table>
            <br />
            <table class='receipt-change'>
                <tr><td>Change:</td><td class="pos-right-align">
                    <t t-esc="widget.format_currency(order.get_change())"/>
                    </td>
                </tr>
                <tr>
                    <td>Desconto Total:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_total_discount())"/>
                    </td>
                </tr>
            </table>
            <t t-if="receipt.footer">
                <br />
                <div style='text-align:center'>
                    <t t-esc="receipt.footer" />
                </div>
            </t>
        </div>
    </t>

</templates>
